/**
 * -----------------------------------------------
 * 引入less全局定义变量和方法集合
 * -----------------------------------------------
 */
@import "../../../lpassert/css/less/variables.less"; 
@import "../../../lpassert/css/less/mixins.less";
//dialog
@dialogBorderColor:       @borderColor;
@dialogBackColor:         @backColor;

.window-default{
    background-color:@dialogBackColor;
    border:1px solid @dialogBorderColor;
    .border-radius(2px);
    .box-shadow(inset 0px 0px 0px 1px @white);
    padding: 4px;
	overflow:hidden;
	position:relative;
    z-index:100;
}
.ks-window-css-shadow{
    background-color:@dialogBackColor;
    box:1px solid dialogBorderColor;
    .border-radius(2px);
}
.x-tool img {
    background-color: transparent;
    background-image: url(http://img03.taobaocdn.com/tps/i3/T1UGU0XgtbXXXrX3fj-180-60.png);
    background-position: 0 -30px;
    background-repeat: no-repeat;
    cursor: pointer;
    height: 16px;
    margin: 0;
    overflow: hidden;
    width: 16px;
	border:0;
}

.x-window-header-title{
	height:22px; 
	line-height:22px;
	float:left;
	padding-left:5px;
}
.x-window-header-tools{
	float:right;
}
.x-tool-expand-top, .x-tool-collapse-top {
    background-position: 0 -210px;
}
.x-tool-maximize {
    background-position: 0 -30px;
}
.x-tool-close {
    background-position: 0 0;
}
.x-tool-restore {
    background-position: 0 -45px;
}
.x-tool {
    height: 15px;
}
.x-panel-header-horizontal .x-tool, .x-window-header-horizontal .x-tool {
    margin-left: 2px;
}
.x-border-box .x-reset, .x-border-box .x-reset * {
    -moz-box-sizing: border-box;
}
.x-panel-header-draggable, .x-panel-header-draggable .x-panel-header-text, .x-window-header-draggable, .x-window-header-draggable .x-window-header-text {
    cursor: move;
}
.x-window-header-text-default {
    color: #333333;
    font-family: tahoma,arial,verdana,sans-serif;
    font-size: 14px;
    font-weight: bold;
    line-height: 16px;
	line-height: 20px\9;
}
.x-window-header-text {
    -moz-user-select: none;
    cursor: default;
    display: block;
    white-space: nowrap;
}
.x-window-body-default {
    border:1px solid @borderColor;
    background-color: @white;
	overflow:hidden;
	position:relative;
}

.x-toolbar-footer {
    padding: 4px 6px;
}
.window-default{
    .x-btn button {
        .inline-block();
        padding: 2px 10px;
        *overflow:visible; //设置这个属性IE6/7下padding才会生效
        font-size: 12px;
        height: 22px;
        line-height: @baseLineHeight - 2px;
        *line-height: @baseLineHeight - 4px;
        color: @grayDark;
        text-align: center;
        font-weight: normal;
        .buttonBackground(@btnBackground, @btnBackgroundHighlight);
        border: 1px solid @borderColor;
        .border-radius(@radius);
        @shadow: inset 0 0 2px rgba(255,255,255,.2), 0 0 2px rgba(0,0,0,.05);
        .box-shadow(@shadow);
        cursor: pointer;
    }
    .x-btn:first-child button{
        .buttonBackground(@btnPrimaryBackground, @btnPrimaryBackgroundHighlight);
        border: 1px solid #382B8E;
        color: @white;
    }
    .x-btn button:hover{
        background-position: 0 -15px;
    }
    .x-btn-default-small {
        background:none;
        height: auto;
    	.inline-block();
    	margin-left:10px;
    }
}
.window-opacity{
	opacity: .8 !important;
	filter: alpha(opacity=80) !important;
}
.x-tool-default{
	margin-left:2px;
	width:16px;
	height:16px;
	display:inline-block;
    overflow:hidden;
    float:left;
}
.x-tool-collapse-bottom{
     background-position: 0 -195px;
}